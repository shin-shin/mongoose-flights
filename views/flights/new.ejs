<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Mongoose Flights</title>
</head>

<body>
    <p><a href="/">Home</a> | <a href="/flights">See List of Flights</a></p>

    <h1>Add a New Flight Information</h1>
    <form action="/flights" method="POST">
        <label>Airline:
            <input type="text" name="airline">
        </label>
        <label>Flight Number:
            <input type="text" name="flightNo">
        </label>
        <label>Departure Date:
            <input type="text" class="datepicker" name="departs-date">
        </label>
        <label>Departure Time:
            <input type="text" class="timepicker" name="departs-time">
        </label>

        <button class="btn waves-effect waves-light" type="submit" name="add-flight">Add Flight</button>
    </form>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var elems1 = document.querySelectorAll('.datepicker');
            var options1 = {
                format: 'yyyy-mm-dd',
            };
            var instances1 = M.Datepicker.init(elems1, options1);

            var options2 = {
                twelveHour: false
            }
            var elems2 = document.querySelectorAll('.timepicker');
            var instances2 = M.Timepicker.init(elems2, options2);
        });
    </script>

</body>

</html>